<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="lt.pgb.plugin.chartboost"
    version="1.0.6">

    <name>Cordova Chartboost plugin</name>
    <description>Show chartboost interstitial (static interstitial, video interstial), more apps, rewarded video ad</description>
    <author>Luditeam</author>
    <license>MIT</license>
    <keywords>cordova,plugin,ad,chartboost,monetisation,interstitial,video</keywords>
    <repo></repo>
    <issue></issue>
	<engines>
	    <engine name="cordova" version=">=3.0.0" />
	</engines>

    <js-module src="www/chartboost.js">
        <clobbers target="window.chartboost" />
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="ChartboostPlugin" >
                <param name="android-package" value="com.luditeam.cordova.plugin.ad.chartboost.ChartboostPlugin"/>
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest">
                <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
                <uses-permission android:name="android.permission.INTERNET" />
                <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </config-file>

        <source-file src="src/android/ChartboostPlugin.java" target-dir="src/com/luditeam/cordova/plugin/ad/chartboost" />

        <source-file src="src/android/chartboost.jar" target-dir="libs" />
    </platform>

	<!-- ios -->
	<platform name="ios">
		<config-file target="config.xml" parent="/*">
			<feature name="ChartboostPlugin">
				<param name="ios-package" value="ChartboostPlugin"/>
				<param name="onload" value="true"/>
			</feature>
		</config-file>

		<header-file src="src/ios/ChartboostPlugin.h" />
		<source-file src="src/ios/ChartboostPlugin.m" />

		<framework src="src/ios/Chartboost.framework" custom="true" type='projectReference'/>
		<framework src="StoreKit.framework" weak="true" />
		<framework src="Foundation.framework" />
		<framework src="CoreGraphics.framework" />
		<framework src="UIKit.framework" />
	</platform>
</plugin>
